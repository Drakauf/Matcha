body
	div.titre
		.row
			.col-md-3
			.col-md-6
				h2 Matcha: récupération de mot de passe
				p
				p
				p Étape 1
				p Obtiens une clé d'autentification
			.col-md-3
	.row
		.col-md-3
		.col-md-6
			div#mailsend
		.col-md-3
	.row
		.col-md-3
		.col-md-6
			form#get_mail(role='form')
				.form-group
					label(for='login')
					|Login
					input.form-control#login(value='', type='text')
				.form-group
					label(for='mail')
					|Mail
					input.form-control#mail(value='', type='text')
				input.btn.btn-success.btn-block.form-control(type='submit', value="Valider")
		.col-md-3
	div.titre.etape2
		.row
			.col-md-3
			.col-md-6
				p Etape 2
				p Choisis ton nouveau mot de passe
