		.col-md-3
		.col-md-6
			div#redefine
		.col-md-3
	.row
		.col-md-3
		.col-md-6
			form#set_pwd(role='form')
				.form-group
					label(for='login')
					|Login
					input.form-control#new_pwdlogin(value='', type='text')
				.form-group
					label(for='key')
					|Clé d'autentification
					input.form-control#key(value='', type='text')
				.form-group
					label(for='new_pwd')
					|Nouveau mot de passe
					input.form-control#new_pwd(value='', type='password')
				.form-group
					label(for='confirm_newpwd')
					|Confirmer le mot de passe
					input.form-control#confirm_newpwd(value='', type='password')
				input.btn.btn-success.btn-block.form-control(type='submit', value="Valider")
		.col-md-3
	div.titre.etape2
		.row
			.col-md-3
			.col-md-6
				p Étape 3
