		.col-md-6
			div#login_error
		.col-md-3
	.row
		.col-md-3
		.col-md-6
			form#relogin(role='form')
				.form-group
					label(for='login')
					|Login
					input#login_new.login.form-control(type='text')
				.form-group
					label(for='pwd')
					|Mot de passe
					input#login_newpwd.form-control(type='password')
